@model SistemaServicios.Models.SolicitudServicio

@{
    ViewData["Title"] = "Detalles de la Solicitud de Servicio";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Solicitud de Servicio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Cliente</dt>
        <dd>@Model.Cliente.Nombre</dd>
        <dt>Técnico</dt>
        <dd>@Model.Tecnico.Nombre</dd>
        <dt>Servicio</dt>
        <dd>@Model.Servicio.Nombre</dd>
        <dt>Fecha Solicitud</dt>
        <dd>@Model.FechaSolicitud.ToString("dd/MM/yyyy")</dd>
        <dt>Estado</dt>
        <dd>@Model.Estado</dd>
        <dt>Comentarios</dt>
        <dd>@Model.Comentarios</dd>
    </dl>
</div>

<div>
    <a href="@Url.Action("Index")">Volver a la lista</a>
</div>
