@model IEnumerable<SistemaServicios.Models.CategoriaServicio>

@{
    ViewData["Title"] = "Categorías de Servicios";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create", "CategoriasServicios")" class="btn btn-primary">Nueva Categoría</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th style="width: 200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nombre</td>
                    <td>@categoria.Descripcion</td>
                    <td>
                        <a href="@Url.Action("Edit", "CategoriasServicios", new { id = categoria.CategoriaId })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("Delete", "CategoriasServicios", new { id = categoria.CategoriaId })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No hay categorías registradas.</td>
            </tr>
        }
    </tbody>
</table>
