@model SistemaServicios.Models.CategoriaServicio

@{
    ViewData["Title"] = "Editar Categoría de Servicio";
}

<h1 class="text-center" style="color: white;">@ViewData["Title"]</h1>

<div class="form-container">
    <h4 class="text-center">Categoría de Servicio</h4>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.CategoriaId)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control custom-input" })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control custom-input" })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            <button type="submit" class="custom-btn btn-green">Guardar</button>
            <a href="@Url.Action("Index", "CategoriasServicios")" class="custom-btn btn-info">Regresar</a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
