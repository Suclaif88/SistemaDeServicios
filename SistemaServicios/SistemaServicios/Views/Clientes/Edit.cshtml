@model SistemaServicios.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Client</h1>

<div class="form-container">
    <h4 class="text-center">Cliente</h4>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ClienteId" />
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control custom-input" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Direccion" class="control-label"></label>
            <input asp-for="Direccion" class="form-control custom-input" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefono" class="control-label"></label>
            <input asp-for="Telefono" class="form-control custom-input" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Documento" class="control-label"></label>
            <input asp-for="Documento" class="form-control custom-input" />
            <span asp-validation-for="Documento" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <input type="submit" value="Guardar" class="custom-btn btn-green" />
            <a asp-action="Index" class="custom-btn btn-info">Regresar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
