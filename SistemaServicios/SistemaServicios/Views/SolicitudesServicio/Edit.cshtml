@model SistemaServicios.Models.SolicitudServicio

@{
    ViewData["Title"] = "Editar Solicitud de Servicio";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="form-container">
    <h4 class="text-center">Editar Solicitud</h4>
    <hr />
    @using (Html.BeginForm("Edit", "SolicitudesServicio", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.SolicitudId)
        <div class="form-group">
            @Html.LabelFor(model => model.ClienteId)
            @Html.DropDownListFor(model => model.ClienteId, (SelectList)ViewData["ClienteId"], "Seleccionar cliente", new { @class = "form-control custom-input" })
            @Html.ValidationMessageFor(model => model.ClienteId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TecnicoId)
            @Html.DropDownListFor(model => model.TecnicoId, (SelectList)ViewData["TecnicoId"], "Seleccionar técnico", new { @class = "form-control custom-input" })
            @Html.ValidationMessageFor(model => model.TecnicoId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ServicioId)
            @Html.DropDownListFor(model => model.ServicioId, (SelectList)ViewData["ServicioId"], "Seleccionar servicio", new { @class = "form-control custom-input" })
            @Html.ValidationMessageFor(model => model.ServicioId)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaSolicitud)
            @Html.TextBoxFor(model => model.FechaSolicitud, new { @class = "form-control custom-input", type = "date" })
            @Html.ValidationMessageFor(model => model.FechaSolicitud)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado)
            @Html.TextBoxFor(model => model.Estado, new { @class = "form-control custom-input" })
            @Html.ValidationMessageFor(model => model.Estado)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comentarios)
            @Html.TextAreaFor(model => model.Comentarios, new { @class = "form-control custom-input" })
            @Html.ValidationMessageFor(model => model.Comentarios)
        </div>

        <div class="form-group text-center">
            <button type="submit" class="custom-btn btn-green">Guardar</button>
            <a href="@Url.Action("Index")" class="custom-btn btn-info">Cancelar</a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}