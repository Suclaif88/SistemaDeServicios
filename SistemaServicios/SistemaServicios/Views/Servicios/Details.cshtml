@model SistemaServicios.Models.Servicio

@{
    ViewData["Title"] = "Detalles del servicio";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="details-container">
    <h4 class="text-center">Servicio</h4>
    <hr />
    <dl class="row details-list">
        <dt class="col-sm-4">
            Nombre
        </dt>
        <dd class="col-sm-8">
            @Model.Nombre
        </dd>
        <dt class="col-sm-4">
            Descripción
        </dt>
        <dd class="col-sm-8">
            @Model.Descripcion
        </dd>
        <dt class="col-sm-4">
            Precio
        </dt>
        <dd class="col-sm-8">
            @Model.Precio.ToString("C")
        </dd>
        <dt class="col-sm-4">
            Categoría
        </dt>
        <dd class="col-sm-8">
            @Model.Categoria.Nombre
        </dd>
    </dl>
    <div class="text-center">
        <a href="@Url.Action("Index")" class="custom-btn btn-info">Regresar</a>
    </div>
</div>