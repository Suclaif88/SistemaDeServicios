@model IEnumerable<SistemaServicios.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
}

<h1 class="text-center mt-4" style="color: white;">@ViewData["Title"]</h1>

<p class="text-end">
    <a class="custom-btn btn-green" asp-action="Create">Crear Nuevo Servicio</a>
</p>

<table class="table custom-table">
    <thead class="thead-dark">
        <tr>
            <th class="text-center">Nombre</th>
            <th class="text-center">Descripción</th>
            <th class="text-center">Precio</th>
            <th class="text-center">Categoría</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">@item.Nombre</td>
                    <td class="text-left">@item.Descripcion</td>
                    <td class="text-left">@item.Precio.ToString("C")</td>
                    <td class="text-left">
                        @(item.Categoria?.Nombre ?? "<span class='text-danger'>Sin Categoría</span>")
                    </td>
                    <td class="text-center">
                        <a class="custom-btn btn-orange" asp-action="Edit" asp-route-id="@item.ServicioId">Editar</a>
                        <a class="custom-btn btn-info" asp-action="Details" asp-route-id="@item.ServicioId">Detalles</a>
                        <a class="custom-btn btn-danger" asp-action="Delete" asp-route-id="@item.ServicioId">Eliminar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No hay servicios registrados.</td>
            </tr>
        }
    </tbody>
</table>
